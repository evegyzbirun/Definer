<h2>Definition: <%= @definition.name() %></h2>
<h3>Word: <%= @definition.word.word_input() %></h3>

<form action="/words/<%= @definition.word.id %>/definitions/ <%= @definition.id %>" method="post">

  
    <label for="definition_name">Definition name</label>
    <input id="definition_name" name="definition_name" class="form-control" type="text">
  


  
  <input name="_method" type="hidden" value="patch">
  <button type="submit" class="btn btn-success">Edit definition</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.word_input()%></a>

